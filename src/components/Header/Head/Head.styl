@import '../styles/base'

.head
  clearfix()
  position relative

  &.theme-dark
    +breakpoint("desktop")
      .logo
        background-image url("https://cdn.auth0.com/styleguide/latest/lib/logos/img/logo-grey.png")


  +breakpoint("desktop", "max")
    &.dropdownOpen
      background-color white

      &:before
        content ''
        display block
        position absolute
        z-index 1
        width calc(100% + 30px)
        left -15px
        height 15px
        top 100%
        background linear-gradient(to bottom, white 0%, rgba(255, 255, 255, .001) 100%)

  +breakpoint("desktop")
    float left


.brand
  float left
  position relative
  margin-left $navbar-padding-horizontal
  margin 0
  width 100px
  height 36px
  vertical-center-elem(36px, $navbar-mobile-height)

  +breakpoint("desktop")
    vertical-center-elem(36px, $navbar-desktop-height)

.logo
  display block
  width 125%
  height 100%
  background-image url('data:image/svg+xml;base64,')
  background-size contain
  background-repeat no-repeat
  font-size 0
  color rgba(0, 0, 0, 0)


.featured
  display block
  position absolute
  top: 50%;
  left calc(100% + 10px)
  transform translateY(-50%)
  background $color-blue-light
  text-transform uppercase
  text-decoration none
  font-weight 500
  padding: 5px 8px;
  border-radius 3px
  color white !important
  font-size 11px
  line-height: 15px;
  text-align center
  transform: translateY(-50%);
  animation-name: bounce;
  transform-origin: center bottom;
  animation-duration: 1s;
  animation-fill-mode: both;
  min-width: 105px

  +breakpoint("desktop")
    right calc(100% + 10px)
    left: auto;

  +breakpoint("desktop")
    +breakpoint("desktop-hd", "max")
      display none

  // Caret
  &:after
    position: absolute;
    content: "";
    top: 50%;
    width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    transform: translateY(-50%);

    +breakpoint("desktop", "max")
      left: -4px;
      border-right: 5px solid #44C7F4;
      border-left: 0;

    +breakpoint("desktop")
      right: -4px;
      border-right: 0;
      border-left: 5px solid #44C7F4;

@keyframes bounce {
  from, 20%, 53%, 80%, to {
    animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
    transform: translate3d(0,-50%,0);
  }

  40%, 43% {
    animation-timing-function: cubic-bezier(0.755, 0.050, 0.855, 0.060);
    transform: translate3d(0, -70%, 0);
  }

  70% {
    animation-timing-function: cubic-bezier(0.755, 0.050, 0.855, 0.060);
    transform: translate3d(0, -60%, 0);
  }

  90% {
    transform: translate3d(0,-52%,0);
  }
}


.toggleButton
  position relative
  float right
  margin-right ($navbar-padding-horizontal - 10px)
  padding 8px
  width 26px
  background-color transparent
  border 0
  vertical-center-elem(20px, $navbar-mobile-height)

  &.closeButton .iconBar
    &:nth-of-type(2)
      top 10px
      width 0%
      left 50%
      opacity 0

    &:nth-of-type(3)
      transform rotate(45deg)

    &:nth-of-type(4)
      transform rotate(-45deg)

    &:nth-of-type(5)
      top 10px
      width 0%
      left 50%
      opacity 0

  &:hover,
  &:focus
    outline 0

  // Bars
  .iconBar
    display block
    position absolute
    width 100%
    height 2px
    left 0
    right 0
    background-color $navbar-toggle-background-color
    transition .25s ease-in-out

    &:nth-of-type(2)
      top 0

    &:nth-of-type(3)
      top 50%
      transform translateY(-50%)

    &:nth-of-type(4)
      top 50%
      transform translateY(-50%)

    &:nth-of-type(5)
      top calc(100% - 2px)


  // Hide at desktop view
  +breakpoint("desktop")
    display none
