@import '../styles/base'

.dropdown
  z-index 1000

  +breakpoint("desktop")
    color $color-text
    background-color white
    border 1px solid rgba(black, .1)
    border-radius 3px
    box-shadow 0 2px 7px rgba(black, .05)
    left 15px
    margin-top 0
    opacity 0
    position absolute
    top 32px
    transition visibility 0s .2s, opacity .2s, margin-top .2s
    visibility hidden

.dropdown.is-open
  +breakpoint("desktop")
    margin-top 5px
    opacity 1
    transition-delay 0s
    visibility visible


.solutionsDropdown
  composes dropdown

  +breakpoint("desktop")
    width 340px

.moreDropdown
  composes dropdown

  +breakpoint("desktop")
    width 612px
